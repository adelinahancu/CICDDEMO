{
  "xsappname": "my-cap-app",
  "tenant-mode": "dedicated",
  "description": "CAP Application with Job Scheduling",
  "scopes": [
    {
      "name": "$XSAPPNAME.Jobs",
      "description": "SAP Job Scheduling service Scope",
      "grant-as-authority-to-apps": [
        "$XSSERVICENAME(my-job-scheduler)"
      ]
    },
    {
      "name": "$XSAPPNAME.Display",
      "description": "Display authorization"
    }
  ],
  "role-templates": [
    {
      "name": "JobSchedulerRole",
      "description": "Job Scheduler operations",
      "scope-references": [
        "$XSAPPNAME.Jobs"
      ]
    },
    {
      "name": "Viewer",
      "description": "View data",
      "scope-references": [
        "$XSAPPNAME.Display"
      ]
    }
  ],
  "authorities": [
    "$ACCEPT_GRANTED_AUTHORITIES"
  ]
}